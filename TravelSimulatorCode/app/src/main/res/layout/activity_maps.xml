<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.walking.walkingsimulator.MapsActivity"
    >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="com.walking.walkingsimulator.MapsActivity"
        android:layout_gravity="right|top" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Route"
        android:id="@+id/btnRouteType"
        android:layout_gravity="right|top"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:visibility="visible"
        android:clickable="false"
        android:padding="20px"
        android:src="@drawable/ic_repeat_black_48dp"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Undo"
        android:id="@+id/btnUndo"
        android:layout_gravity="right|top"
        android:layout_marginTop="100dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/ic_undo_black_48dp"
        android:background="#ffffff" />

    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Select route!"
        android:id="@+id/btnGo"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_style"
        android:textSize="10pt"
        android:textStyle="normal"
        android:inputType="text" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Route"
        android:layout_gravity="left|top"
        android:visibility="visible"
        android:clickable="false"
        android:id="@+id/btnSettings"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_settings_black_48dp"
        android:background="#ffffff" />


</FrameLayout>
